<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_orange_fade_test1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chrisdixon.mobilepatientrecord.UserManualActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"
        android:text="@string/pressing_your_username_brings_up_a_log_of_all_your_activity"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="@string/user_logged_in_as_" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="@string/_abc"
        android:textColor="#1CCC35"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/organDonor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:contentDescription="@string/_0_seconds_recorded"
        android:src="@drawable/arrow_left" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/organDonor"
        android:layout_alignTop="@+id/textView5"
        android:background="@drawable/button"
        android:contentDescription="@string/_0_seconds_recorded"
        android:text="@string/enabled" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView3"
        android:contentDescription="@string/_0_seconds_recorded"
        android:src="@drawable/swipe_up_down" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageView3"
        android:text="@string/swiping_up_or_down_on_any_screen_will_allow_you_to_make_a_call_to_any_of_the_emergency_services"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/textView1"
        android:text="@string/disabled_buttons_look_like" />

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/organDonor"
        android:layout_alignLeft="@+id/textView1"
        android:background="@drawable/button_disabled"
        android:contentDescription="@string/_0_seconds_recorded"
        android:text="@string/disabled" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/organDonor"
        android:text="@string/enabled_buttons_look_like" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/textView5"
        android:layout_marginRight="25dp"
        android:contentDescription="@string/_0_seconds_recorded"
        android:src="@drawable/arrow_right" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_toLeftOf="@+id/imageView4"
        android:text="@string/swiping_left_or_right_on_the_patient_records_screen_will_begin_the_process_to_send_the_patient_to_a_hospital"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignTop="@+id/textView7"
        android:contentDescription="@string/_0_seconds_recorded"
        android:src="@drawable/swipe_left_right" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:text="@string/pulsating_text_should_be_pressed_for_more_information"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pulseME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginLeft="52dp"
        android:text="@string/pressable"
        android:textColor="#007AA3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>