<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/patientRecordsActivityLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/horizontal_orange_fade_grid_lines"
    android:gravity="top" >

    <TextView
        android:id="@+id/title_select_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/name_"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/setName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/title_select_hospital"
        android:text="@string/setname"
        android:textColor="#007AA3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/logged_in_as" />

    <TextView
        android:id="@+id/userLoggedInPatientRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bloodType"
        android:text="@string/username"
        android:textColor="#1CCC35" />

    <ImageView
        android:id="@+id/medicationImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/medication_image"
        android:src="@drawable/drug" />

    <ImageView
        android:id="@+id/imageFlower"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_alignRight="@+id/fMedHistoryView"
        android:layout_below="@+id/medicationImage"
        android:layout_marginRight="44dp"
        android:contentDescription="@string/flower_image"
        android:src="@drawable/flower" />

    <TextView
        android:id="@+id/doctorConcernT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medHistoryView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="@string/doctor_s_concerns"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/medHistoryViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userLoggedInPatientRecord"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="@string/medical_history"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/medicationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageFlower"
        android:layout_below="@+id/setName"
        android:text="@string/medication"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/allergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicationImage"
        android:layout_centerHorizontal="true"
        android:text="@string/allergies"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/personImage"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bloodTypeImage"
        android:layout_marginTop="7dp"
        android:contentDescription="@string/default_person_picture"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/fMedHistoryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/medHistoryViewText"
        android:layout_below="@+id/imageFlower"
        android:layout_marginTop="2dp"
        android:text="@string/family_medical_history"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/medHistoryView"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pharmacy_cross_"
        android:src="@drawable/firstaid" />

    <ImageView
        android:id="@+id/fMedHistImage"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/medicationImage"
        android:layout_alignTop="@+id/fMedHistoryView"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/family_history_image"
        android:maxHeight="50dp"
        android:src="@drawable/family" />

    <ImageView
        android:id="@+id/doctorConcernImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/imageFlower"
        android:layout_below="@+id/fMedHistImage"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/doctor_concerns_image"
        android:src="@drawable/doctor" />

    <TextView
        android:id="@+id/bloodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setName"
        android:layout_below="@+id/medicationTextView"
        android:text="@string/n_a"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/bloodTypeImage"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/allergies"
        android:layout_toLeftOf="@+id/bloodType"
        android:contentDescription="@string/blood_type_image"
        android:src="@drawable/bloodtype" />

    <TextView
        android:id="@+id/patientResuscitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/medHistoryViewText"
        android:layout_alignParentLeft="true"
        android:text="@string/medium_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/organDonation"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/bloodType"
        android:layout_toRightOf="@+id/setName"
        android:contentDescription="@string/pharmacy_cross_"
        android:src="@drawable/transparent2" />

</RelativeLayout>