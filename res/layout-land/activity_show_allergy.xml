<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chrisdixon.mobilepatientrecord.ShowAllergyActivity"
    android:background="@drawable/background_orange_fade_test1"  >

     <ListView
         android:id="@+id/show_allergy_list_item"
         android:layout_width="match_parent"
         android:layout_height="430dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="25dp"
         android:layout_marginTop="60dp"
         android:divider="#007AA3"
         android:dividerHeight="3dp" >

    </ListView>

     <TextView
         android:id="@+id/patientFamilyHistoryListItem"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/show_allergy_list_item"
         android:layout_alignParentTop="true"
         android:text="List Of Allergies"
         android:textSize="22sp" />

     <TextView
         android:id="@+id/patientConcernsNameListItem"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/goBack"
         android:layout_marginRight="74dp"
         android:text="User Logged In:" />

     <TextView
         android:id="@+id/userLoggedInAllergy"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/patientConcernsNameListItem"
         android:layout_alignBottom="@+id/patientConcernsNameListItem"
         android:layout_alignRight="@+id/goBack"
         android:layout_marginLeft="50dp"
         android:text="TextView"
         android:textColor="#1CCC35" />

     <TextView
         android:id="@+id/patientResuscitate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/goBack"
         android:layout_alignLeft="@+id/show_allergy_list_item"
         android:layout_marginLeft="25dp"
         android:text="Allergy Name" />

     <Button
         android:id="@+id/goBack"
         style="@drawable/button"
         android:layout_width="100dp"
         android:layout_height="60dp"
         android:layout_alignTop="@+id/patientFamilyHistoryListItem"
         android:layout_marginLeft="85dp"
         android:layout_marginTop="11dp"
         android:layout_toRightOf="@+id/patientFamilyHistoryListItem"
         android:background="@drawable/button"
         android:text="Go Back" />

     <TextView
         android:id="@+id/userLoggedInAsAudioAndVideo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/patientResuscitate"
         android:layout_alignRight="@+id/show_allergy_list_item"
         android:text="Date Discovered" />

</RelativeLayout>
