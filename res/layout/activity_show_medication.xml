<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_orange_fade_test1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chrisdixon.mobilepatientrecord.ShowMedicationActivity" >

    <ListView
        android:id="@+id/show_medication_list_item"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:divider="#007AA3"
        android:dividerHeight="2dp" >

    </ListView>
    <TextView
        android:id="@+id/dateOfHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#007AA3"
        android:text="List Of Medication:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dateHistoryOccurred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dateOfHistory"
        android:layout_marginTop="32dp"
        android:text="Name"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/patientReferenceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateHistoryOccurred"
        android:layout_alignBottom="@+id/dateHistoryOccurred"
        android:layout_marginLeft="51dp"
        android:layout_toRightOf="@+id/dateHistoryOccurred"
        android:text="Dosage"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/patientReferenceNumber"
        android:layout_alignBottom="@+id/patientReferenceNumber"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/patientReferenceNumber"
        android:text="Date Started/Finish"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/userLoggedInShowMedication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="TextView"
        android:textColor="#1CCC35"
        android:textColorLink="#1CCC35"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:layout_toRightOf="@+id/dateOfHistory"
        android:text="Logged In As:"
        android:textSize="12sp" />

    <Button
        android:id="@+id/goBack"
        style="@drawable/button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:background="@drawable/button"
        android:text="Go Back"
        android:textSize="15sp" />

</RelativeLayout>